<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ch.cloud.upms.mapper.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ch.cloud.upms.model.Permission">
        <id column="ID" property="id" />
        <result column="TYPE" property="type" />
        <result column="NAME" property="name" />
        <result column="CODE" property="code" />
        <result column="URL" property="url" />
        <result column="REDIRECT" property="redirect" />
        <result column="ICON" property="icon" />
        <result column="SORT" property="sort" />
        <result column="hidden" property="hidden" />
        <result column="IS_SYS" property="sys" />
        <result column="PARENT_ID" property="parentId" />
        <result column="PARENT_NAME" property="parentName" />
        <result column="METHOD" property="method" />
        <result column="STATUS" property="status" />
        <result column="deleted" property="deleted" />
        <result column="CREATE_BY" property="createBy" />
        <result column="CREATE_AT" property="createAt" />
        <result column="UPDATE_BY" property="updateBy" />
        <result column="UPDATE_AT" property="updateAt" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, `TYPE`, `NAME`, CODE, URL, REDIRECT, ICON, SORT, hidden, IS_SYS, PARENT_ID, PARENT_NAME, METHOD, STATUS, deleted, CREATE_BY, CREATE_AT, UPDATE_BY, UPDATE_AT
    </sql>

    <select id="findByTypeAndRoleId" resultMap="BaseResultMap">
        select
        DISTINCT <include refid="Base_Column_List"/>
        from st_permission t
        <if test="roleId !=null and roleId > 0">
            inner join st_role_permission t1
            on t.ID = t1.PERMISSION_ID and t1.ROLE_ID = #{roleId}
        </if>
        where t.status = '1'
          AND t.deleted = 0
        <if test="types != null and types.size() > 0">
            and t.TYPE in
            <foreach collection="types" item="type" open="(" separator="," close=")" >
                #{type}
            </foreach>
        </if>
    </select>
    <insert id="insertRolePermissions">
        insert into st_role_permission(ROLE_ID, PERMISSION_ID) values
        <foreach collection="permissionIds" separator="," item="permissionId">
            (#{roleId}, #{permissionId})
        </foreach>
    </insert>
    <delete id="deleteRoleAllPermissions">
        delete from st_role_permission where ROLE_ID = #{roleId}
    </delete>
    <delete id="deleteRolePermissions">
         delete t1 from st_role_permission t1
         inner join st_permission t2 on t2.id = t1.PERMISSION_ID
         where t2.TYPE != '4' and ROLE_ID = #{roleId}
    </delete>
    <delete id="deleteRoleAuthPermissions">
         delete t1 from st_role_permission t1
         inner join st_permission t2 on t2.id = t1.PERMISSION_ID
         where t2.TYPE = '4' and ROLE_ID = #{roleId}
    </delete>
</mapper>
