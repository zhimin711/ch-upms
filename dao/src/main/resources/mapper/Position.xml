<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ch.cloud.upms.user.mapper.PositionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ch.cloud.upms.user.model.Position">
        <id column="id" property="id" />
        <result column="code" property="code" />
        <result column="name" property="name" />
        <result column="sort" property="sort" />
        <result column="remark" property="remark" />
        <result column="status" property="status" />
        <result column="create_by" property="createBy" />
        <result column="create_at" property="createAt" />
        <result column="update_by" property="updateBy" />
        <result column="update_at" property="updateAt" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, code, name, sort, remark, status, create_by, create_at, update_by, update_at
    </sql>

    <select id="findByDepartmentId" resultMap="BaseResultMap">
        select t.* from st_position t
        inner join st_department_position t1
        on t.id = t1.position_id
        where t1.department_id = #{departmentId}
    </select>
    <select id="findByDepartmentIdAndNameAndStatus" resultMap="BaseResultMap">
        select t.* from st_position t
        inner join st_department_position t1
        on t.id = t1.position_id
        where t1.department_id = #{departmentId}
        <if test="status != null">
            and t.status = #{status,jdbcType=VARCHAR}
        </if>
        <if test="name != null and name != ''">
            and t.name like #{name,jdbcType=VARCHAR}
        </if>
    </select>

    <insert id="insertDepartmentPositions">
        insert into st_department_position(department_id, position_id) values
        <foreach collection="positionIds" separator="," item="positionId">
            (#{departmentId}, #{positionId})
        </foreach>
    </insert>
    <delete id="deleteDepartmentPositions">
        delete
        from st_department_position
        where department_id = #{departmentId}
    </delete>
</mapper>
