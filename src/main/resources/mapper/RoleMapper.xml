<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ch.cloud.upms.mapper.RoleMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ch.cloud.upms.model.Role">
        <id column="ID" property="id" />
        <result column="NAME" property="name" />
        <result column="CODE" property="code" />
        <result column="TYPE" property="type" />
        <result column="DESCRIPTION" property="description" />
        <result column="STATUS" property="status" />
        <result column="deleted" property="deleted" />
        <result column="CREATE_BY" property="createBy" />
        <result column="CREATE_AT" property="createAt" />
        <result column="UPDATE_BY" property="updateBy" />
        <result column="UPDATE_AT" property="updateAt" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, NAME, CODE, TYPE, DESCRIPTION, STATUS, deleted, CREATE_BY, CREATE_AT, UPDATE_BY, UPDATE_AT
    </sql>


    <select id="getCurrent" resultMap="BaseResultMap">
    SELECT t.*,t1.status sort
    FROM st_role t
    INNER JOIN st_user_role t1
    on t1.ROLE_ID = t.ID
    INNER JOIN st_user t2
    on t2.ID = t1.USER_ID
    WHERE t2.USERNAME = #{username}
	ORDER BY sort DESC,t.type,t.id asc	LIMIT 1
  </select>
    <select id="findByUserId" resultMap="BaseResultMap">
    SELECT t.*
    FROM st_role t
    LEFT JOIN st_user_role t1
    ON t.ID = t1.ROLE_ID
    WHERE t.STATUS IN ('1')
    AND t1.USER_ID = #{userId}
    ORDER BY t1.STATUS DESC,t1.ROLE_ID ASC
  </select>
</mapper>
